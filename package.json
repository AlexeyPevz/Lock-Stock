{
  "name": "lock-stock-question-bot",
  "version": "0.1.0",
  "private": true,
  "description": "Telegram bot for offline Lock Stock style game rounds (question, hints, answer).",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.json && npm run copy-resources",
    "copy-resources": "cp src/db/schema.sql dist/db/",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "seed": "ts-node-dev --transpile-only src/scripts/seed.ts",
    "seed:all": "ts-node-dev --transpile-only src/scripts/seed-all.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@grammyjs/storage-file": "^2.5.1",
    "@grammyjs/storage-redis": "^2.5.1",
    "@sentry/node": "^8.55.0",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^16.4.5",
    "grammy": "^1.24.1",
    "openai": "^4.57.0",
    "redis": "^4.7.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
